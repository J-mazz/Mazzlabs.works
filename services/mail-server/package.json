{
  "name": "mazzlabs-mail-server",
  "version": "1.0.0",
  "description": "Custom mail server for mail.mazzlabs.works",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\""
  },
  "keywords": ["mail", "smtp", "imap", "email"],
  "author": "MazzLabs",
  "license": "MIT",
  "dependencies": {
    "smtp-server": "^3.13.4",
    "imap-server": "^1.1.0",
    "mailparser": "^3.7.1",
    "nodemailer": "^6.9.15",
    "better-sqlite3": "^11.7.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "helmet": "^8.0.0",
    "rate-limiter-flexible": "^5.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "concurrently": "^9.1.0"
  }
}
