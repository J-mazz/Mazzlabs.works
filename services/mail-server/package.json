{
  "name": "mazzlabs-mail-server",
  "version": "1.0.0",
  "description": "Custom mail server for mail.mazzlabs.works",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm run build",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "mail",
    "smtp",
    "imap",
    "email"
  ],
  "author": "MazzLabs",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "imap-server": "^0.0.1",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.1",
    "nodemailer": "^7.0.7",
    "rate-limiter-flexible": "^5.0.3",
    "smtp-server": "^3.13.4",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "concurrently": "^9.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": 1,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
